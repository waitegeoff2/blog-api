generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//for session cookies

model Session {
  id        String   @id
  sid       String   @unique
  data      String     // MediumText may be needed for MySql
  expiresAt   DateTime
}
